{{> navbar_index }}

{{#if flash}}
<div style="text-align: center" id="flash" class="alert alert-{{flash.type}}" role="alert">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <strong>{{flash.text}}</strong>
</div>
{{/if}}

<div class="container-fluid bg pt-5">
    <div class="row">
        <div class="col-md-4 col-sm-4 col-xs-12"></div>
        <div class="col-md-4 col-sm-4 col-xs-12">
            <!--form start-->
            <form class="form-container" action="/applySettings" method="POST">
                <h2 class="text-center">{{i18n "settings"}}</h2>
                <div class="form-group">
                    <label for="labelForLanguages">{{i18n "language"}}</label>
                    <select name="languages" id="languages" class="form-control">
                        <option value="en">ENG ({{i18n "default"}})</option>
                        <option value="cz">CZ</option>
                    </select>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">{{i18n "save"}}</button>
                    <button type="button" class="btn btn-primary" onclick="history.back()">{{i18n "back"}}</button>
                </div>
            </form>
            <!--form end-->
        </div>
        <div class="col-md-4 col-sm-4 col-xs-12"></div>
    </div>
</div>

<script>
    setTimeout(function () {
        $('#flash').remove();
    }, 3000);
    let element = document.getElementById("languages");
    if("{{language_value}}") {
        element.value = "{{language_value}}";
    } else {
        element.value = "en";
    }
</script>